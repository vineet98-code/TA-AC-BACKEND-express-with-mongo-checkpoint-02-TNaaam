<%- include('partials/header') -%>

<section class="main_section">
    <div class="container">
      <h2 class="event_list">Event Details</h2>
      <section class="events_section flex-70">
        <div>
            <div>
                <h2 class="title">
                    <%= `Event name : ${event.title }` %>
                </h2>
                <h3 class="summary summary_new">
                    <%= `About : ${event.summary}` %>
                </h3>
                <p class="host">
                    <%= `Host : ${event.host}`%>
                </p>
                <p class="start_date">
                    <%= `Scheduled Event from : ${event.start_date}` %>
                </p>
                <p class="end_date">
                    <%= `Scheduled Event To : ${event.end_date}` %>
                </p>

                <p class="category">
                    <%= `Type of Event : ${event.event_category}` %>
                </p>
                <p class="location">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= `Location : ${event.location}` %>
                </p>

                <a href="/events/<%= event.id %>/edit ">
                    <button class="btn edit_event_btn">
                        Edit Event
                    </button>
                </a>
                <a href="/events/<%= event.id  %>/delete ">
                    <button class="btn delete_event_btn">
                        Delete Event
                    </button>
                </a>

                <div class="likes_div flex">
                    <div>
                        <p class="likes_value">
                            <%= event.likes %>
                        </p>
                        <a href="/events/<%= event.id  %>/likes ">
                            <i class="far fa-thumbs-up likes"></i>
                        </a>
                    </div>
                    <div>
                        <p class="dislikes_value">
                            <%= event.dislikes %>
                        </p>
                        <a href="/events/<%= event.id  %>/dislikes ">
                            <i class="far fa-thumbs-down dislikes"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
  </section>

  <section>
    <div class="container">
        <div class="form_section">
            <form class="remark_form" action="/events/<%= event.id %>/remark" method="POST">
                <input name="title" type="text" placeholder="Enter Remarks" />
                <input name="author" type="text"  placeholder="Author name" />
                <button class="btn remark_btn" type="submit"> Add Remark </button>
            </form>
        </div>
    </div>
</section>


<section class="remark_section_total">
  <div class="container">
      <div class=" flex wrap">
        <% event.remark.forEach(remark => { %>
          <div class="remark_section flex-28">
              <div class="remarks_div">
                  <div>
                      <h2 class="text">
                          <%= remark.title %>
                      </h2>
                      <h3 class="author">
                          <%= `Author : ${remark.author }` %>
                      </h3>
                      <a href="/remark/<%= remark.id  %>/edit ">
                          <button class="btn edit_remark_btn">
                              Edit
                          </button>
                      </a>
                      <a href="/remark/<%= remark.id  %>/delete ">
                          <button class="btn delete_remark_btn">
                              Delete
                          </button>
                      </a>
                  </div>
                  <div class="likes_div flex">
                      <div>
                          <p class="likes_value">
                              <%= remark.likes %>
                          </p>
                          <a href="/remark/<%= remark.id  %>/increment ">
                              <i class="far fa-thumbs-up likes">
                              </i>
                          </a>
                      </div>
                      <div>
                          <p class="dislikes_value">
                              <%= remark.dislikes %>
                          </p>
                          <a href="/remark/<%= remark.id  %>/decrement ">
                              <i class="far fa-thumbs-down dislikes">
                              </i>
                          </a>
                        </div>
                    </div>
              </div>
          </div>
          <% }) %>
        </div>
  </div>
</section>

<%- include('partials/footer') -%>